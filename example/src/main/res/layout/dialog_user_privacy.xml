<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_white_radius_bg">

    <android.support.constraint.Guideline
        android:id="@+id/gl_dup_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_dup_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="服务协议和隐私政策"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dup_t" />

    <View
        android:id="@+id/v_dup_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dup_content" />

    <TextView
        android:id="@+id/tv_dup_no"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="暂不使用"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_dup_center"
        app:layout_constraintTop_toBottomOf="@id/v_dup_line" />


    <TextView
        android:id="@+id/tv_dup_yes"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="同意"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/gl_dup_center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_dup_line" />
</android.support.constraint.ConstraintLayout>